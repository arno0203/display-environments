{
  "manifest_version": 2,
  "name": "Display environments",
  "description": "Permet d'identifier l'environnement sur lequel on travail",
  "version": "1.0",
  "background": {
    "scripts": [
      "js/jquery-2.2.3.min.js",
      "js/background.js"
    ],
    "persistent" : false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/jquery-2.2.3.min.js",
        "js/content.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_icon": "img/icon.png"
  }
}